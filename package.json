{
  "name": "niduscss-framework",
  "version": "6.0.0",
  "description": "A personal CSS framework to process with PostCSS",
  "scripts": {
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint 'packages/**/*.css'",
    "lint:js": "eslint . --ext js"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nimedev/niduscss-framework"
  },
  "keywords": [
    "css",
    "postcss"
  ],
  "author": "Nicolás Mejía Correa <nicolasmejiaco@gmail.com> (https://twitter.com/nimedev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nimedev/niduscss-framework/issues"
  },
  "homepage": "https://github.com/nimedev/niduscss-framework",
  "engines": {
    "npm": ">=5.0.0",
    "node": ">=6.9 <7.0.0"
  },
  "devDependencies": {
    "eslint": "3.19.0",
    "eslint-config-nimedev-base": "3.0.0",
    "eslint-plugin-import": "2.2.0",
    "pre-commit": "1.2.2",
    "stylelint": "7.10.1"
  },
  "eslintConfig": {
    "extends": "nimedev-base"
  },
  "stylelint": {
    "extends": "./packages/stylelint-config-niduscss"
  }
}
